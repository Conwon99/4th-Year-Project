    .setNumHeaders(1)
    .setPosition(5, 5, 0, 0)
    .setOption("title", "Sample chart 1")
    .setOption("hAxis", {title: "x axis"})
    .setOption("vAxis", {title: "y axis"})
    .build();

     sheet.insertChart(chart);
*/

}


function newChart()
{
    var sheet_id = '1SCO1O9fMxWu7AC_HnG8A52A0Kz4f5mPd_om0JT2VKTw'; 		// Spreadsheet ID
    var sheet = SpreadsheetApp.openById(sheet_id).getActiveSheet();		// get Active sheet
    var newRow = sheet.getLastRow() + 1;			

    chart = sheet.newChart()
    .asLineChart()
    .addRange(sheet.getRange(3,2,newRow,1))
    .setPosition(5, 5, 0, 0)
    .setOption("title", "Battery Voltage")
    .setOption("hAxis", {title: "Time"})
    .setOption("vAxis", {title: "Voltage (V)"})
    .build();

     sheet.insertChart(chart);
}
